{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_NOTIFICATION_DISPATCHER": "notify-send",
    "CLAUDE_NOTIFY_ERRORS": "true",
    "ENGINEER_NAME": "Aur√©lien",
    "KYUTAI_LANGUAGE": "fr",
    "KYUTAI_VOICE": "onyx"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(./vendor/bin/phpstan:*)",
      "Bash(bin/console:*)",
      "Bash(chmod:*)",
      "Bash(composer --version)",
      "Bash(composer:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(docker compose exec:*)",
      "Bash(docker compose:*)",
      "Bash(docker exec:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh issue:*)",
      "Bash(gh pr close:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rev-list:*)",
      "Bash(git shortlog:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(make grunt:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(php -l:*)",
      "Bash(php:*)",
      "Bash(rm /tmp/pr_body*.md)",
      "Bash(sentry-cli projects:*)",
      "Bash(tree:*)",
      "Bash(vendor/bin/phpstan:*)",
      "Bash(vendor/bin/phpunit:*)",
      "Bash(npx claude-code-templates:*)",
      "Bash(xdg-open:*)",
      "Bash(sleep:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:localhost)",
      "WebFetch(domain:meilisearch.com)"
    ],
    "deny": [
      "Bash(cd :*data:*)",
      "Bash(cp :*data:*)",
      "Bash(mv :*data:*)",
      "Bash(rm :*data:*)"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/rtk-rewrite.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/chmod-written-files.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/chown-written-files.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "chrome-ui-test@atournayre-claude-plugin-marketplace": true,
    "claude-code-setup@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude@atournayre-claude-plugin-marketplace": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": false,
    "command@atournayre-claude-plugin-marketplace": true,
    "context7@claude-plugins-official": false,
    "customize@atournayre-claude-plugin-marketplace": true,
    "dev@atournayre-claude-plugin-marketplace": true,
    "doc@atournayre-claude-plugin-marketplace": true,
    "feature-dev@claude-plugins-official": false,
    "framework@atournayre-claude-plugin-marketplace": true,
    "frontend-design@claude-code-plugins": false,
    "gemini@atournayre-claude-plugin-marketplace": true,
    "git@atournayre-claude-plugin-marketplace": true,
    "github@atournayre-claude-plugin-marketplace": true,
    "hookify@claude-code-plugins": false,
    "marketing@atournayre-claude-plugin-marketplace": true,
    "notifications@atournayre-claude-plugin-marketplace": true,
    "output-styles@atournayre-claude-plugin-marketplace": true,
    "php-lsp@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": false,
    "prompt@atournayre-claude-plugin-marketplace": true,
    "qa@atournayre-claude-plugin-marketplace": true,
    "ralph-loop@claude-plugins-official": true,
    "review@atournayre-claude-plugin-marketplace": false,
    "sentry@claude-plugins-official": false,
    "symfony@atournayre-claude-plugin-marketplace": true,
    "utils@atournayre-claude-plugin-marketplace": true
  },
  "language": "french",
  "skipDangerousModePermissionPrompt": true
}
